<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Hub Settings">

        <EditTextPreference
            app:key="hubName"
            app:title="Change Hub Name"
            app:defaultValue="LightHub"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="enforceHttps"
            app:title="Enforce HTTPS"
            app:defaultValue="true"
            app:useSimpleSummaryProvider="true">

        </SwitchPreferenceCompat>

    </PreferenceCategory>

</PreferenceScreen>